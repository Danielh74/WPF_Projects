<Window x:Class="Uno_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uno_Game" xmlns:controls="clr-namespace:Uno_Game.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Name="GameBoard">

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="1" Grid.Column="1">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Grid.Column="1" Grid.Row="1" BorderThickness="0" Background="Transparent" Height="75" Width="25">
                    <Image Source="/Resources/card_back.png" Cursor="Hand"/>
                </Button>
                <Image Name="UpCard" Grid.Column="1" Grid.Row="1" Margin="0,0,10,0" Height="75" Width="25"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentPlayerTurn}" FontWeight="Bold" Margin="5"/>
                    <Border CornerRadius="20" BorderThickness="0.5" BorderBrush="Black" Background="{Binding CurrentColor}" Height="15" Width="15"/>
                </StackPanel>
            </StackPanel>
        </Viewbox>

        <Border Name="Player1Border" Grid.Row="2" Grid.Column="1" BorderBrush="Black">
            <Viewbox >
                <StackPanel Name="Player1Space" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal"/>
            </Viewbox>
        </Border>

        <Border Name="Player2Border" Grid.Row="0" Grid.Column="1" BorderBrush="Black">
            <Viewbox>
                <StackPanel Name="Player2Space" HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" />
            </Viewbox>
        </Border>

        <Border Name="Player3Border" Grid.Row="1" Grid.Column="2" BorderBrush="Black">
            <Viewbox>
                <StackPanel Name="Player3Space" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,5,5"/>
            </Viewbox>
        </Border>

        <Border Name="Player4Border" Grid.Row="1" Grid.Column="0" BorderBrush="Black">
            <Viewbox>
                <StackPanel Name="Player4Space" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,5,0,5"/>
            </Viewbox>
        </Border>






        <controls:PlayerSelectionControl x:Name="PlayerSelectionWindow" Grid.ColumnSpan="3" Grid.RowSpan="3"/>
    </Grid>
</Window>
