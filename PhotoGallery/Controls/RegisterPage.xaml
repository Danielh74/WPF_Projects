<UserControl x:Class="PhotoGallery.Controls.RegisterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoGallery.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Name="RegisterPanel">
        <Label Content="UserName:"/>
        <TextBox Name="UserName_TB"/>
        <Label Content="Email:"/>
        <TextBox Name="Email_TB"/>
        <Label Content="Password:"/>
        <TextBox Name="Password_TB"/>
        <Button Content="Register" Margin="10" Click="OnUserRegister"/>

        <TextBlock Text="Already a user? Login" Margin="0,20,0,5" HorizontalAlignment="Center"/>
        <Button Content="Login" HorizontalAlignment="Center" Padding="5" Click="ChangeForm" />
    </StackPanel>

</UserControl>
