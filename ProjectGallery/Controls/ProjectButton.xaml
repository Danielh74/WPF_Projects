<UserControl x:Class="ProjectGallery.Controls.ProjectButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectGallery.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Button Name="RunButton" Background="Transparent" BorderThickness="0">
            <StackPanel Orientation="Vertical">
                <Image Source="{Binding Image}" Height="100" Width="100"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
