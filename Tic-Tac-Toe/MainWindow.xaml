<Window x:Class="Tic_Tac_Toe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="clr-namespace:Tic_Tac_Toe.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <controls:Board Grid.Column="0" x:Name="gameBoard" />
        <controls:EndGameMessage Grid.Column="0" x:Name="endGameMessage" />

        <Border BorderThickness="1,0,0,0" BorderBrush="Black" Margin="0,5,0,5" Grid.Column="1">
            <StackPanel  Margin="10">
                <TextBlock Text="Tic-Tac-Toe Game" FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" />

                <StackPanel Name="playerNameBoxes" Visibility="Visible">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label Content="Player1:" Width="50" HorizontalAlignment="Left"/>
                        <TextBox Name="p1_text" Width="150" Height="17"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label Content="Player2:" Width="50" HorizontalAlignment="Left"/>
                        <TextBox Name="p2_text" Width="150" Height="17"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="Leaderboard:" Margin="10 10 10 5" FontWeight="Bold" FontSize ="15" HorizontalAlignment="Center"/>

                <TextBlock Margin="10 0 10 0" FontSize ="15">
                    <Run Name="p1_name" Text="Player1" FontWeight="DemiBold"/>
                    <Run Text=":" FontWeight="Bold"/>
                    <Run Name="p1_score" Text="{Binding PlayerOneScore}"/>
                </TextBlock>

                <TextBlock  Margin="10 0 10 20" FontSize ="15">
                    <Run Name="p2_name" Text="Player2" FontWeight="DemiBold"/>
                    <Run Text=":"  FontWeight="Bold"/>
                    <Run Name="p2_score" Text="{Binding PlayerTwoScore}"/>
                </TextBlock>

                <Button Name="Btn_PvP" Content="PvP (Player Vs Player)" Margin="10" Click="NewGame_Click" />
                <Button Name="Btn_PvC" Content="PvC (Player Vs Computer)" Margin="10,0,10,0" Click="NewGame_Click" />
                <Button Name="Btn_CvC" Content="CvC (Computer Vs Computer)" Margin="10" Click="NewGame_Click" />

                <Button Content="Exit" Margin="10 20 10 10" HorizontalAlignment="Center" Padding="15,0,15,0" FontWeight="DemiBold" Background="OrangeRed" Click="NewGame_Click" Name="Btn_Exit"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
